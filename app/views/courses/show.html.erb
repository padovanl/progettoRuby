<% content_for :title, "Courses" %>
<br>
<div>
  <section class="hero is-small">
    <div class="hero-body">
      <div class="container">
        <h2 class="title" id="course-name">
          <%= @course_details['course_name'] %>
        </h2>
        <div class="subtitle">
          <div class="is-size-4">
            <%= @course_details['degree_course_name'] %>
          </div>
          <%= react_component('TeacherSubtitle', {teacher: @course_details['current_teacher']}) %>
        </div>
        <h6>
          <%= react_component('SurveyButton', {course_id: params['id'], user_id: current_user[:id].to_s, details_follow_course: @course_details['details_follow_course']}) %>
        </h6>
      </div>
    </div>
  </section>
</div>

<div class="hero">
  <div class="hero-body has-text-centered">
    <div class="container">

      <div class="tabset">
        <!-- Tab 1 -->
        <input type="radio" name="tabset" id="tab1" aria-controls="marzen" checked>
        <label for="tab1">Statistiche</label>
        <!-- Tab 2 -->
        <input type="radio" name="tabset" id="tab2" aria-controls="rauchbier">
        <label for="tab2">Domande</label>
        <!-- Tab 3 -->
        <input type="radio" name="tabset" id="tab3" aria-controls="dunkles">
        <label for="tab3">Suggerimenti</label>
        <!-- Tab 4 -->
        <input type="radio" name="tabset" id="tab4" aria-controls="history_teachers">
        <label for="tab4">Storico Insegnanti</label>

        <div class="tab-panels">
          <section id="marzen" class="tab-panel">
            <br />
            <div class="columns">
              <div class="column"></div>
              <div class="column is-8">
                <%= react_component ('MainStatisticCourse'), {statistic_values: @course_details['mapping_statistiche']} %>
              </div>
              <div class="column"></div>
            </div>
          </section>
          <section id="rauchbier" class="tab-panel">
            <%= react_component('MainQuestion', {course_id: params['id'], user_id: current_user[:id].to_s, details_follow_course: @course_details['details_follow_course']}) %>
          </section>
          <section id="dunkles" class="tab-panel">
            <%= react_component('MainTip', {course_id: params['id'], user_id: current_user[:id].to_s, details_follow_course: @course_details['details_follow_course']}) %>
          </section>
          <section id="history_teachers" class="tab-panel">
            <br />
            <div class="columns">
              <div class="column"></div>
              <div class="column is-8">
                <%= react_component('MainHistoryTeachers', {course_id: params['id'], teacher_history: @course_details['teacher_history']}) %>
              </div>
              <div class="column"></div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>

