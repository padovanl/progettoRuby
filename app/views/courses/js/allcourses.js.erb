// Append new data
$("<%=j render(:partial => 'tcs', :object => @tcs) %>")
    .appendTo($(".infinite-table table"));

// Update pagination link
<% if @lessons.last_page? %>
$('.pagination').html("That's all, folks!");
<% else %>
$('.pagination')
    .html("<%=j link_to_next_page(@lessons, 'Next Page', :remote => true) %>");
<% end %>