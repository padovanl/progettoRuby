<% post.documents.each do |allegato| %>
  <% unless allegato.file.nil? %>
    <%if allegato.file.variable? %>
      <%= link_to image_tag(allegato.file.variant(resize: "64x64")), allegato.file %>
    <% elsif allegato.file.previewable? %>
      <%= link_to image_tag(allegato.file.preview(resize: "64x64")),
                  rails_blob_path(allegato.file, disposition: :attachement) %>
    <% elsif allegato.file.image? %>
      <%= link_to image_tag(allegato.file, width: 64), allegato.file %>
    <% elsif allegato.file.filename.to_s.end_with? "zip" %>
      <%= link_to image_tag(image_url("zip-box.png"), width: 64), allegato.file %>
    <% else %>
      <%= link_to allegato.file.filename,
                  rails_blob_path(allegato.file, disposition: :attachement) %>
    <% end %>
  <% end %>
<% end %>