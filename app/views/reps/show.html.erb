<% content_for :title, "Dettagli ripetizione" %>




<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title" style="margin-top: 5%;">
        Corso: <%= @rep.course.name %>
      </h1>
      <h2 class="subtitle">
      </h2>
    </div>
  </div>
</section>
<br>
<div class="container">
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Descrizione</legend>
    <div style="margin: 10px;">
      <%= @rep.description %>
    </div>
  </fieldset>
  <% if @rep.offer %>
    <br>
    <fieldset class="left-gap" style="margin-right: 1em">
      <legend style="margin-left: 10px;">Competenze</legend>
      <div style="margin: 10px;">
        <%= @rep.user_competence %>
      </div>
    </fieldset>
  <% end %>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Offro / Cerco</legend>
    <div style="margin: 10px;">
      <% if @rep.offer %>
        <p> <%= @rep.user.name %> offre ripetizione </p>
      <% else %>
        <p> <%= @rep.user.name %> cerca ripetizione </p>
      <% end %>
    </div>
  </fieldset>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">â‚¬/h</legend>
    <div style="margin: 10px;">
      <% if @rep.price_hours > 0 %>
        <%= @rep.price_hours %>
      <% else %>
        <p> Gratis </p>
      <% end %>
    </div>
  </fieldset>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Luogo</legend>
    <div style="margin: 10px;">
      <% if @rep.place != nil %>
        <%= @rep.place %>
      <% else %>
        <p> Non indicato </p>
      <% end %>
    </div>
  </fieldset>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Home service</legend>
    <div style="margin: 10px;">
      <% if @rep.home_service  %>
        <p> Offre l'home service </p>
      <% elsif !@rep.home_service %>
        <p> Non offre l'home service </p>
      <% else  %>
        <p> Non indicato</p>
      <% end %>
    </div>
  </fieldset>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Giorni della settimana</legend>
    <div style="margin: 10px;">
      <% if @rep.week_days != nil %>
        <%= @rep.week_days %>
      <% else %>
        <p> Non indicato</p>
      <% end %>
    </div>
  </fieldset>
  <br>
  <fieldset class="left-gap" style="margin-right: 1em">
    <legend style="margin-left: 10px;">Ultima modifica</legend>
    <div style="margin: 10px;">
      <%= @rep.updated_at.strftime("%d %b %y") %>
    </div>
  </fieldset>

</div>


