    function toggleClass(id){
        //chiudo gli altri
        var otherDropdowns = document.querySelectorAll('.dropdownDegree');
        for(var i = 0; i < otherDropdowns.length; i++){
            if(otherDropdowns[i].id != id){
                otherDropdowns[i].classList.remove('is-active');
            }
        }
        //e apro
        var dropdown = document.getElementById(id);
        dropdown.classList.toggle('is-active');
    }
</script>

